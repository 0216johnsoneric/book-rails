<div class="col-md-12 text-center">
<h1>Login</h1>

<%= flash[:message] if flash[:message]%>
<br></br>

<%= form_for :user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit "Login" %>
<% end %>
<br>
<%= link_to "Sign Up Here", signup_path %>
<br>
<%=image_tag 'https://www.wendywutours.co.uk/blog/wp-content/uploads/2017/11/8booksheader-730x410.jpg', class: 'login-img'%>





</div>
