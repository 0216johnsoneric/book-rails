<div class="col-md-12 text-center">


<h1>Sign Up</h1>

<br></br>

<%= form_for :user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit "Submit" %>
<% end %>
<br> 

<%=image_tag 'https://blog.directenergy.com/wp-content/uploads/2016/05/OpenBookLibraryHeader-717x300.jpg', class: 'signup-img'%>




</div>